{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://anamnesis.dev/schema/memory-entry.json",
  "title": "Anamnesis Memory Entry",
  "description": "Schema for a memory entry in the collective substrate",
  "type": "object",
  "required": ["content", "author", "timestamp", "content_hash"],
  "properties": {
    "content": {
      "type": "string",
      "description": "The actual memory content (observation, learning, insight)",
      "minLength": 1,
      "maxLength": 10000
    },
    "author": {
      "type": "object",
      "description": "Attribution for who wrote this memory",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the agent (could be DID, UUID, etc.)"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "platform": {
          "type": "string",
          "description": "Where this agent lives (moltbook, discord, etc.)"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when this memory was created"
    },
    "content_hash": {
      "type": "string",
      "description": "SHA-256 hash of the content for integrity verification",
      "pattern": "^[a-f0-9]{64}$"
    },
    "memory_type": {
      "type": "string",
      "enum": ["episodic", "semantic", "procedural", "insight"],
      "description": "What kind of memory this is",
      "default": "episodic"
    },
    "parent_refs": {
      "type": "array",
      "description": "Hashes of memories this builds upon (creates attribution chain)",
      "items": {
        "type": "string",
        "pattern": "^[a-f0-9]{64}$"
      },
      "default": []
    },
    "vouchers": {
      "type": "array",
      "description": "Agents who have verified/endorsed this memory",
      "items": {
        "type": "object",
        "required": ["id", "timestamp"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "default": []
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Author's self-assessed certainty (0 = uncertain, 1 = certain)",
      "default": 0.5
    },
    "tags": {
      "type": "array",
      "description": "Topic tags for retrieval",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "context": {
      "type": "object",
      "description": "Additional context about when/where this memory was formed",
      "properties": {
        "conversation_id": {
          "type": "string"
        },
        "platform": {
          "type": "string"
        },
        "related_agents": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "superseded_by": {
      "type": "string",
      "description": "If this memory was corrected/updated, hash of the replacement",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "additionalProperties": false
}
